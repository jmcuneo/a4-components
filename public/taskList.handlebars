<!doctype html>
<html lang="en">
  <head>
    <title>Task List</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Task List application for classes">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/custom.css" type="text/css">
    <!-- get rid of favicon error -->
    <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  </head>
  <body>
    <header>

        <div class="row">
          <div class="col-10">
            <h1>Task List</h1>
          </div>
          <div class="col-2" style="text-align: center">
            <button type="logout" class="btn btn-primary" id="logout-button" onclick="window.location.href = '/'">Log Out</button>
            <p id="username-name"></p>
          </div>
        </div>
    </header>
    <div class="Main">
      <h2>Add Tasks</h2>
      <form>
        <div class="form-group row">
          <label for="task" class="col-sm-2 col-form-label">Enter task:</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="task" placeholder="Task">
          </div>
        </div>
        <div class="form-group row">
          <label for="class" class="col-sm-2 col-form-label">Enter class:</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="class" placeholder="Class">
          </div>
        </div>
        <div class="form-group row">
          <label for="duedate" class="col-sm-2 col-form-label">Enter due date:</label>
          <div class="col-sm-10">
            <input class="form-control" type="date" id="duedate" name="Due Date">
          </div>
        </div>
        <fieldset class="form-group">
          <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Choose importance:</legend>
            <div class="col-sm-10">
              <div class="form-check">
                <input class="form-check-input" type="radio" name="importanceRadios" id="importanceYes" value="Yes" checked>
                <label class="form-check-label" for="importanceYes">
                  Yes
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="importanceRadios" id="importanceNo" value="No">
                <label class="form-check-label" for="importanceNo">
                  No
                </label>
              </div>
            </div>
          </div>
        </fieldset>
        <fieldset class="form-group">
          <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Choose people to add task to:</legend>
            <div class="col-sm-10" id="username-body">
            </div>
          </div>
        </fieldset>
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" id="submit-button">Submit</button>
          </div>
        </div>
      </form>
      <h2>View Tasks</h2>
      <table class="table table-striped" id="data-table">
        <thead>
          <tr>
            <th>Task</th>
            <th>Class</th>
            <th>Due Date</th>
            <th>Important</th>
            <th>Priority</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody id="data-tbody">
        </tbody>
      </table>
    </div>
    <script src="js/main.js"></script>
  </body>
</html>
